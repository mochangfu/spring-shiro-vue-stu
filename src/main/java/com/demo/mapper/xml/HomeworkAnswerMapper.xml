<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.HomeworkAnswerMapper">

	<!--查询列表-->
	<select id="getListByPage"  resultType="com.demo.pojo.HomeworkAnswer">
		SELECT *
		FROM
		homeworkAnswer
		WHERE 1=1

		<if test="id!=null">
			and id=#{id}
		</if>

		<if test="name!=null">
			and id like CONCAT('%',#{name},'%')
		</if>

		<if test="homeworkId!=null">
			and homeworkId=#{homeworkId}
		</if>
		<if test="userId!=null">
			and userId=#{userId}
		</if>
 order by postTime
	</select>

	<update id="insertRecord" parameterType="com.demo.pojo.HomeworkAnswer"  >
		insert into homeworkAnswer(homeworkId,fileId,postTime,userId,score )
		VALUES (#{homeworkId},#{fileId},#{postTime},#{userId},#{score})
	</update>
</mapper>
